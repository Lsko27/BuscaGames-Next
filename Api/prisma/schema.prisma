generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String  @unique
  password String
}

model Game {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  description   String
  image         String
  price         Float
  originalPrice Float
  discount      Int
  rating        Float
  platforms     String[]
  genres        String[]
  releaseDate   DateTime
  developer     String
  publisher     String
  tags          String[]
}
